<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    tools:context=".fragments.FragmentDemoActivity"
    >


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Choose one ðŸ“²"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/main" />

    <fragment
        android:id="@+id/fragmentContainerView"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_margin="10sp"

        app:layout_constraintBottom_toTopOf="@+id/andriodButton"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <Button
        android:id="@+id/andriodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Andriod"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintEnd_toStartOf="@+id/iSOButton"
        app:layout_constraintStart_toStartOf="@id/main" />

    <Button
        android:id="@+id/iSOButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iOS"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:layout_constraintStart_toEndOf="@id/andriodButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>